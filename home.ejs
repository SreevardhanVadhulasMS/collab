<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts - COLLAB</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: #f5f5f5;
            color: black;
            align-items: center; 
        }

        .header {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding: 20px 15px;
            background: rgba(41, 40, 40, 0.3);
            backdrop-filter: blur(10px);
            position: fixed;
            top: 0;
            left: 0;
            border-bottom: 2px solid rgba(255, 255, 255, 0.1);
            z-index: 1000;
        }

        .title {
            font-size: 2.5vw;
            font-weight: 700;
            text-decoration: none;
            color: black;
            text-align: center;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: gray;
            position: fixed;
            top: 0;
            left: -250px;
            padding-top: 80px;
            transition: left 0.3s ease-in-out;
        }

        .sidebar a {
            display: block;
            padding: 15px;
            color: white;
            text-decoration: none;
            transition: 0.3s;
        }

        .sidebar a:hover {
            background: #1f1f1f;
        }

        .sidebar.active {
            left: 0;
        }

        .toggle-btn {
            font-size: 24px;
            background: none;
            border: none;
            color: white;
            cursor: pointer;
            margin-left: 15px;
            position: absolute;
            left: 15px;
            top: 20px;
            z-index: 1100;
        }

        .posts-container {
            width: 90%;
            max-width: 900px;
            margin: 100px auto 50px;
            padding: 20px;
            background: rgba(20, 20, 20, 0.95);
            border-radius: 12px;
            box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.2);
            text-align: center;
            align-self: center; 
        }

        .post {
            display: flex;
            flex-direction: column;
            gap: 10px;
            background: rgba(255, 255, 255, 0.95);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            text-align: left;
            border-left: 5px solid #4CAF50;
        }

        .post h3 {
            font-size: 20px;
            color: black;
            margin: 0;
        }

        .post p {
            font-size: 16px;
            color: #333;
            margin: 0;
        }

        .post strong {
            color: #222;
        }

        .post .meta {
            display: flex;
            justify-content: space-between;
            font-size: 14px;
            color: #666;
            border-top: 1px solid #ddd;
            padding-top: 10px;
            margin-top: 10px;
        }

        @media screen and (max-width: 768px) {
            .toggle-btn {
                display: block;
            }

            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .posts-container {
                width: 95%;
                margin: 100px auto;
            }

            .post {
                padding: 15px;
            }

            .title {
                font-size: 4vw;
            }
        }

        @media screen and (max-width: 480px) {
            .posts-container {
                width: 95%;
                padding: 18px;
                margin: 100px auto; 
            }

            .post {
                padding: 12px;
                font-size: 14px;
            }

            .post h3 {
                font-size: 18px;
            }

            .post p {
                font-size: 14px;
            }

            .title {
                font-size: 5vw;
            }

            .toggle-btn {
                font-size: 22px;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <button class="toggle-btn" onclick="toggleSidebar()">â˜°</button>
        <a class="title">COLLAB.</a>
    </header>

    <div class="sidebar" id="sidebar">
        <a href="/home">All posts</a>
        <a href="/create">My posts</a>
        <a href="/logout">Logout</a>
    </div>

    <div class="posts-container">
        <h2 style="color: rgb(221, 220, 220); text-align: center; margin-bottom: 20px;">All Posts</h2>
        <div id="postList" class="post-list">
            <p style="color: white; text-align: center;">Loading posts...</p>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("active");
        }

        document.addEventListener("DOMContentLoaded", function () {
            fetchAllPosts();
        });

        function fetchAllPosts() {
            fetch("/fetch-all-posts")
                .then(response => response.json())
                .then(posts => {
                    const postList = document.getElementById("postList");
                    postList.innerHTML = ""; 

                    if (posts.length === 0) {
                        postList.innerHTML = "<p style='color: white; text-align: center;'>No posts available.</p>";
                        return;
                    }

                    posts.forEach(post => {
                        const div = document.createElement("div");
                        div.classList.add("post");

                        div.innerHTML = `
                            <h3>${post.title}</h3>
                            <p><strong>Date of post:</strong> ${new Date(post.date).toLocaleDateString()}</p>
                            <p><strong>Name:</strong> ${post.name}</p>
                            <p><strong>Contact:</strong> ${post.contact}</p>
                            <p><strong>Timeline:</strong> ${post.timeline}</p>
                            <p><strong>Description:</strong> ${post.description}</p>
                            <p><i>Posted by: ${post.posted_by}</i></p>
                        `;
                        postList.appendChild(div);
                    });
                })
                .catch(error => {
                    console.error(" Error fetching posts:", error);
                    document.getElementById("postList").innerHTML = "<p style='color: black;'>Error loading posts.</p>";
                });
        }
    </script>
</body>
</html>
