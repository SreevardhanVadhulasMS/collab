<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: #d4d3d3;
        }

        .header {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding: 20px 15px;
            background: rgba(41, 40, 40, 0.3);
            backdrop-filter: blur(10px);
            position: fixed;
            top: 0;
            left: 0;
            border-bottom: 2px solid rgba(255, 255, 255, 0.1);
            z-index: 1000;
        }

        .title {
            font-size: 2.5vw;
            font-weight: 700;
            text-decoration: none;
            color: black;
            text-align: center;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: gray;
            position: fixed;
            top: 0;
            left: -250px; 
            padding-top: 80px;
            transition: left 0.3s ease-in-out;
        }

        .sidebar a {
            display: block;
            padding: 15px;
            color: white;
            text-decoration: none;
            transition: 0.3s;
        }

        .sidebar a:hover {
            background: #1f1f1f;
        }

        .sidebar.active {
            left: 0; 
        }

        .toggle-btn {
            font-size: 24px;
            background: none;
            border: none;
            color: white;
            cursor: pointer;
            margin-left: 15px;
        }

        .main-content {
            margin-left: 260px;
            padding: 100px 20px;
            color: black;
        }

        .content-container {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
            border-radius: 10px;
        }

        .section {
            flex: 1;
            min-width: 400px;
            max-width: 600px;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .form-container {
            display: flex;
            flex-direction: column;
            gap: 15px;
            align-items: center;
        }

        .form-container label {
            font-weight: bold;
            text-align: left;
            width: 100%;
            color: black;
        }

        .form-container input,
        .form-container textarea {
            width: 100%;
            max-width: 500px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        .form-container textarea {
            resize: vertical;
            height: 80px;
        }

        .btn {
            background: black;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 16px;
            width: 100%;
            max-width: 500px;
        }

        .btn:hover {
            background: #333;
        }
.sidebar {
    width: 250px;
    height: 100vh;
    background: gray;
    position: fixed;
    top: 0;
    left: -250px;  
    padding-top: 80px;
    transition: left 0.3s ease-in-out;
}

.sidebar a {
    display: block;
    padding: 15px;
    color: white;
    text-decoration: none;
    transition: 0.3s;
}

.sidebar a:hover {
    background: #1f1f1f;
}

.sidebar.active {
    left: 0;  
}

@media screen and (min-width: 768px) {
    .sidebar {
        left: 0;  
    }
}

.toggle-btn {
    font-size: 24px;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    margin-left: 15px;
    position: absolute;
    left: 15px;
    top: 20px; 
    z-index: 1100;
}

.main-content {
    margin-left: 0;
    padding: 100px 20px;
}
.post-list {
    list-style: none;
    padding: 0;
}

.post-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: white;
    padding: 10px 15px;
    border-radius: 8px;
    margin-bottom: 10px;
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
}

.post-content {
    display: flex;
    justify-content: space-between;
    width: 100%;
    align-items: center;
}

.delete-btn {
    background: darkred;
    color: white;
    padding: 6px 12px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    font-size: 14px;
}

.delete-btn:hover {
    background: rgb(64, 60, 60);
}


@media screen and (min-width: 768px) {
    .main-content {
        margin-left: 260px;
    }
}


        @media screen and (max-width: 768px) {
            .sidebar {
                left: -250px; 
            }

            .sidebar.active {
                left: 0; 
            }

            .main-content {
                margin-left: 0;
                padding: 100px 20px;
            }

            .content-container {
                flex-direction: column;
            }

            .title {
                font-size: 6vw;
            }
        }

        @media screen and (max-width: 480px) {
            .title {
                font-size: 8vw;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <button class="toggle-btn" onclick="toggleSidebar()">â˜°</button>
        <a class="title">COLLAB.</a>
    </header>

    <div class="sidebar" id="sidebar">
        <a href="home">All posts</a>
        <a href="create">My posts</a>
        <a href="/logout">Logout</a>
    </div>

    <div class="main-content">
        <div class="content-container">
            <div class="section">
                <h2 style="color: black;">Create New Post</h2>
                <form class="form-container" action="/submit" method="POST">
                    <label for="title">Project Title:</label>
                    <input type="text" id="title" name="title" placeholder="Enter title" required>

                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" placeholder="Enter your name" required>

                    <label for="date">Date of post:</label>
                    <input type="date" id="date" name="date" required>

                    <label for="contact">Contact Number:</label>
                    <input type="text" id="contact" name="contact" placeholder="Enter contact number" required>

                    <label for="timeline">Project Timeline:</label>
                    <input type="text" id="timeline" name="timeline" placeholder="Enter project timeline" required>

                    <label for="description">Project Description:</label>
                    <textarea id="description" name="description" placeholder="Enter project details" required></textarea>

                    <button type="submit" class="btn">Post</button>
                </form>
            </div>

            <div class="section">
                <h2 style="color: black;">My Posts</h2>
                <ul id="postList" class="post-list"></ul>
            </div>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            let sidebar = document.getElementById("sidebar");
            sidebar.classList.toggle("active");  
        }

        document.addEventListener("DOMContentLoaded", function () {
            fetchPosts();
        });

        function fetchPosts() {
    fetch("/fetch-posts")
        .then(response => response.json())
        .then(posts => {
            console.log("Fetched posts:", posts);
            const postList = document.getElementById("postList");
            postList.innerHTML = ""; 

            posts.forEach(post => {
                const li = document.createElement("li");
                li.classList.add("post-item");  

                li.innerHTML = `
                    <div class="post-content">
                        <strong>${post.title}</strong>  
                        <button class="delete-btn" onclick="deletePost('${post.id}')">Delete</button>
                    </div>
                `;
                postList.appendChild(li);
            });
        })
        .catch(error => console.error("Error fetching posts:", error));
}

        function deletePost(postId) {
            fetch("/delete-post", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ postId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    fetchPosts();
                } else {
                    alert("Failed to delete post");
                }
            })
            .catch(error => console.error("Error deleting post:", error));
        }
    </script>
</body>
</html>
